<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B1E0C0"
    tools:context=".ListadoDeCitas">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaCitasCalendario"
        android:layout_width="280dp"
        android:layout_height="550dp"
        android:translationX="63dp"
        android:translationY="110dp" />

    <TextView
        android:id="@+id/nombreA"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/MarcaDeAgua"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:translationX="150dp"
        android:translationY="150dp"
        />

    <TextView
        android:id="@+id/viewCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CITAS"
        android:textColor="#000000"
        android:textSize="@dimen/_21sdp"
        android:translationY="-510dp"
        android:textAlignment="center" />

    <!-- <TextView
        android:id="@+id/prueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FechaPrueba"
        android:textSize="20sp" />
    -->

</LinearLayout>